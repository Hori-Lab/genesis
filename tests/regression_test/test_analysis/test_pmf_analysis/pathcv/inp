# control parameters in pmf_analysis
 
[INPUT]
weightfile     = ../../trajectories/umbrella_path/{}.weight   # weight file
cvfile         = ../../trajectories/umbrella_path/{}.pathcv
distfile       = ../../trajectories/umbrella_path/{}.pathdist
 
[OUTPUT]
pmffile        = pmf.dat     # potential of mean force file
 
[OPTION]
